# Export the main constructor
export(m61r)

# Export IO Primitives
export(read_csv)

# Export Core Primitives (The "_" functions)
exportPattern("^[a-zA-Z_]+_$")
export("modify_<-")

# Export Specialized Primitives
export(case_when)
export(cut_time)
export(create_key)
export(.select_cols)
export(across)

# S3 Generic Overloads (Important for the pipeline object)
S3method(left_join, m61r)
S3method(right_join, m61r)
S3method(inner_join, m61r)
S3method(full_join, m61r)
S3method(semi_join, m61r)
S3method(anti_join, m61r)

export(anti_join)
export(left_join)
export(right_join)
export(inner_join)
export(full_join)
export(semi_join)

# S3 Method Registrations
S3method("[", m61r)
S3method("[<-", m61r)
S3method(print, m61r)
S3method(names, m61r)
S3method(dim, m61r)
S3method(as.data.frame, m61r)
S3method(rbind, m61r)
S3method(cbind, m61r)

